<div class="max-w-md mx-auto mt-10 bg-white rounded-2xl border border-slate-200 shadow-sm p-8">
  <h1 class="text-2xl font-bold text-slate-900 mb-6 text-center">Create your account</h1>
  
  <%= form_with model: @user, url: sign_up_path, class: "space-y-6" do |form| %>
    <% if form.object.errors.any? %>
      <div class="rounded-xl bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 text-sm mb-4">
        <%= form.object.errors.full_messages.to_sentence %>
      </div>
    <% end %>

    <div class="grid grid-cols-2 gap-4">
        <div>
            <%= form.label :first_name, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= form.text_field :first_name, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "given-name" %>
        </div>
        <div>
            <%= form.label :last_name, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= form.text_field :last_name, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "family-name" %>
        </div>
    </div>
    
    <div>
      <%= form.label :email_address, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= form.email_field :email_address, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "username", placeholder: "you@example.com" %>
    </div>
    
    <div>
      <%= form.label :password, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= form.password_field :password, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "new-password", placeholder: "Minimum 12 characters" %>
      <p class="mt-1 text-xs text-slate-500">Minimum 12 characters. Must include upper & lower case, number, and symbol.</p>
    </div>

    <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= form.password_field :password_confirmation, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "new-password", placeholder: "Repeat password" %>
    </div>
    
    <div>
      <%= form.submit "Sign up", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-xl shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition active:scale-[0.98]" %>
    </div>
  <% end %>
</div>