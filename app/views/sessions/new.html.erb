<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<div class="max-w-md mx-auto mt-10 bg-white rounded-2xl border border-slate-200 shadow-sm p-8">
  <h1 class="text-2xl font-bold text-slate-900 mb-6 text-center">Welcome back</h1>
  
  <%= form_with url: session_path, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email_address, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= form.email_field :email_address, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "username", placeholder: "you@example.com" %>
    </div>
    
    <div>
      <%= form.label :password, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= form.password_field :password, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "current-password", placeholder: "••••••••" %>
    </div>
    
    <div>
      <%= form.submit "Log in", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-xl shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition active:scale-[0.98]" %>
    </div>
    
    <div class="text-sm text-center">
      <%= link_to "Forgot password?", new_passwords_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end %>
</div>
