<%# app/views/settings/emails/show.html.erb %>
<div class="space-y-6">
    <div class="pb-5 border-b border-slate-200">
        <h3 class="text-xl font-bold leading-6 text-slate-900">Change Email</h3>
        <p class="mt-2 max-w-4xl text-sm text-slate-500">Update the email address associated with your account.</p>
    </div>

    <%= form_with model: Current.user, url: settings_email_path, class: "space-y-6 max-w-lg" do |form| %>
        <% if form.object.errors.any? %>
            <div class="rounded-xl bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 text-sm">
                <%= form.object.errors.full_messages.first %>
            </div>
        <% end %>

        <div>
            <%= form.label :unconfirmed_email, "New email address", class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= form.email_field :unconfirmed_email, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true %>
        </div>

        <div>
            <%= form.label :password_challenge, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= form.password_field :password_challenge, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "current-password" %>
            <p class="mt-1 text-xs text-slate-500">We need your current password to confirm your changes.</p>
        </div>

        <div>
            <%= form.submit "Update Email Address", class: button_classes(:primary) %>
        </div>
    <% end %>
</div>