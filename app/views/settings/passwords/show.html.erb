<%# app/views/settings/passwords/show.html.erb %>
<div class="space-y-6">
    <div class="pb-5 border-b border-slate-200">
        <h3 class="text-xl font-bold leading-6 text-slate-900">Change Password</h3>
        <p class="mt-2 max-w-4xl text-sm text-slate-500">Ensure your account is using a long, random password to stay secure.</p>
    </div>

    <%= form_with model: Current.user, url: settings_password_path, class: "space-y-6 max-w-lg" do |form| %>
        <% if form.object.errors.any? %>
            <div class="rounded-xl bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 text-sm">
                <%= form.object.errors.full_messages.first %>
            </div>
        <% end %>

        <div>
            <%= form.label :password_challenge, "Current Password", class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= form.password_field :password_challenge, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "current-password" %>
        </div>

        <div>
            <%= form.label :password, "New Password", class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= form.password_field :password, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "new-password" %>
            <p class="mt-1 text-xs text-slate-500">Minimum 12 characters. Must include upper & lower case, number, and symbol.</p>
        </div>

        <div>
            <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= form.password_field :password_confirmation, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "new-password" %>
        </div>

        <div>
            <%= form.submit "Update Password", class: button_classes(:primary) %>
        </div>
    <% end %>
</div>