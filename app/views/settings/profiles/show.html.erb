<%# app/views/settings/profiles/show.html.erb %>
<div class="space-y-6">
    <div class="pb-5 border-b border-slate-200">
        <h3 class="text-xl font-bold leading-6 text-slate-900">Profile</h3>
        <p class="mt-2 max-w-4xl text-sm text-slate-500">Update your public profile information.</p>
    </div>

    <%= form_with model: Current.user, url: settings_profile_path, class: "space-y-6 max-w-lg" do |form| %>
        <% if form.object.errors.any? %>
            <div class="rounded-xl bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 text-sm">
                <%= form.object.errors.full_messages.first %>
            </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <%= form.label :first_name, class: "block text-sm font-medium text-slate-700 mb-1" %>
                <%= form.text_field :first_name, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "given-name" %>
            </div>

            <div>
                <%= form.label :last_name, class: "block text-sm font-medium text-slate-700 mb-1" %>
                <%= form.text_field :last_name, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "family-name" %>
            </div>
        </div>

        <div>
            <%= form.submit "Update Profile", class: button_classes(:primary) %>
        </div>
    <% end %>
</div>