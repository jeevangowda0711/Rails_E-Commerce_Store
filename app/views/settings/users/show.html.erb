<%# app/views/settings/users/show.htlm.erb %>
<div class="space-y-6">
    <div class="pb-5 border-b border-slate-200">
        <h3 class="text-xl font-bold leading-6 text-slate-900">Account</h3>
        <p class="mt-2 max-w-4xl text-sm text-slate-500">Manage your account data and privacy.</p>
    </div>

    <div class="rounded-2xl bg-rose-50 border border-rose-100 p-6">
        <h3 class="text-base font-semibold text-rose-900">Delete account</h3>
        <div class="mt-2 max-w-xl text-sm text-rose-700">
            <p>Once you delete your account, you will lose all data associated with it. This action cannot be undone.</p>
        </div>
        <div class="mt-5">
            <%= button_to "Delete my account", settings_user_path, method: :delete, data: { turbo_confirm: "Are you sure? This cannot be undone." }, class: button_classes(:danger) %>
        </div>
    </div>
</div>