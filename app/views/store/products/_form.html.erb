<%# app/views/products/_form.html.erb%>

<%= form_with model: [ :store, product ], class: "space-y-6" do |form| %>
    <% if form.object.errors.any? %>
        <div class="rounded-xl bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 text-sm">
             <%= form.object.errors.full_messages.to_sentence %>
        </div>
    <% end %>

    <div>
        <%= form.label :name, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= form.text_field :name, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
        <%= form.label :description, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <div class="prose-editor">
            <%= form.rich_textarea :description, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 min-h-[200px]" %>
        </div>
    </div>

    <div>
        <%= form.label :featured_image, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= form.file_field :featured_image, accept: "image/*", class: "block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-xl file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
    </div>

    <div>
        <%= form.label :inventory_count, class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= form.number_field :inventory_count, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="pt-4 border-t border-slate-200">
        <%= form.submit class: button_classes(:primary) %>
    </div>
<% end %>  