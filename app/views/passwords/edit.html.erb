<div class="max-w-md mx-auto mt-10 bg-white rounded-2xl border border-slate-200 shadow-sm p-8">
  <h1 class="text-2xl font-bold text-slate-900 mb-2 text-center">Update your password</h1>
  <p class="text-sm text-slate-500 text-center mb-8">Enter your new password below.</p>
  
  <%= form_with url: passwords_path(token: params[:token]), method: :put, class: "space-y-6" do |form| %>
    <% if flash[:alert] %>
        <div class="rounded-xl bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 text-sm">
            <%= flash[:alert] %>
        </div>
    <% end %>

    <% if form.object.errors.any? %>
        <div class="rounded-xl bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 text-sm">
            <%= form.object.errors.full_messages.to_sentence %>
        </div>
    <% end %>

    <div>
        <%= form.label :password, "New Password", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= form.password_field :password, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "new-password", placeholder: "Minimum 12 characters" %>
        <p class="mt-1 text-xs text-slate-500">Minimum 12 characters. Must include upper & lower case, number, and symbol.</p>
    </div>

    <div>
        <%= form.label :password_confirmation, "Repeat New Password", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= form.password_field :password_confirmation, class: "block w-full rounded-xl border-slate-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true, autocomplete: "new-password", placeholder: "Repeat new password" %>
    </div>
    
    <div>
      <%= form.submit "Save Password", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-xl shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition active:scale-[0.98]" %>
    </div>
  <% end %>
</div>
