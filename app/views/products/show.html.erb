<div class="mb-6">
    <%= link_to products_path, class: "inline-flex items-center text-sm font-medium text-slate-500 hover:text-slate-700 transition" do %>
        <svg class="mr-1 h-5 w-5 flex-none text-slate-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
        </svg>
        Back to Products
    <% end %>
</div>

<div class="lg:grid lg:grid-cols-2 lg:gap-x-8 lg:items-start">
    <%# Left Column: Image %>
    <div class="flex flex-col-reverse">
        <div class="aspect-[4/3] w-full overflow-hidden rounded-2xl bg-slate-100">
             <%= image_tag @product.featured_image, class: "h-full w-full object-cover object-center" if @product.featured_image.attached? %>
        </div>
    </div>

    <%# Right Column: Info %>
    <div class="mt-10 px-4 sm:mt-16 sm:px-0 lg:mt-0">
        <% cache @product do%>
            <h1 class="text-3xl font-bold tracking-tight text-slate-900"><%= @product.name %></h1>
            
            <div class="mt-6">
                <div class="prose prose-slate prose-indigo max-w-none">
                    <%= @product.description %>
                </div>
            </div>
        <% end %>

        <div class="mt-8 border-t border-slate-200 pt-8 space-y-6">
            <%= render "inventory", product: @product %>
            <%= render "wishlist", product: @product %>
        </div>
    </div>
</div>